{# 
    Component: Sticky CTA
    Description: Fixed position bar that appears on scroll to ensure conversion path is always visible.
#}
<div id="sticky-cta" class="sticky-cta-bar hidden-on-hero">
    <div class="container">
        <div class="sticky-content">
            <div class="product-info">
                <span class="product-name">{{ product.name }}</span>
                <span class="product-price">{{ product.price }}</span>
            </div>
            
            <a href="{{ product.url }}" class="btn btn-primary btn-sm cta-button" data-type="sticky">
                {{ theme.settings.sticky_cta_label|default('Buy Now') }}
            </a>
        </div>
    </div>
</div>

<script>
    // Simple logic to show/hide based on Hero visibility
    // Integrated with Scroll Logic in app.js ideally, but inline for safety
    document.addEventListener('scroll', function() {
        const hero = document.querySelector('.campaign-hero');
        const stickBar = document.getElementById('sticky-cta');
        if(hero && stickBar) {
            const heroBottom = hero.offsetTop + hero.offsetHeight;
            if(window.scrollY > heroBottom) {
                stickBar.classList.add('visible');
            } else {
                stickBar.classList.remove('visible');
            }
        }
    });
</script>
