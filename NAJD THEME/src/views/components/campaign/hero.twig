{# 
    Component: Campaign Hero
    Description: High-impact visual area with primary CTA and headline.
    Zone: Decision Zone (for dwell tracking)
#}
<section class="campaign-hero decision-zone" data-hero-variant="{{ variant|default('standard') }}">
    <div class="hero-background">
        {% if image %}
            <img src="{{ image }}" alt="{{ title }}" loading="eager">
        {% else %}
             <div class="placeholder-pattern"></div>
        {% endif %}
    </div>

    <div class="container">
        <div class="hero-content">
            {% if pre_title %}
                <span class="hero-pretitle animate-fade-down">{{ pre_title }}</span>
            {% endif %}

            <h1 class="hero-title animate-fade-up">{{ title }}</h1>
            
            {% if description %}
                <p class="hero-description animate-fade-up delay-100">{{ description }}</p>
            {% endif %}

            <div class="hero-actions animate-fade-up delay-200">
                {% import 'macros/campaign_macros.twig' as campaign %}
                
                {{ campaign.cta(cta_text, cta_url, 'primary', 'hero_cta_primary') }}
                
                {% if secondary_cta_text %}
                    {{ campaign.cta(secondary_cta_text, secondary_cta_url, 'outline', 'hero_cta_secondary') }}
                {% endif %}
            </div>

            {% if social_proof %}
                <div class="hero-social-proof animate-fade-in delay-300">
                    {{ social_proof_content | raw }}
                </div>
            {% endif %}
        </div>
    </div>
</section>
