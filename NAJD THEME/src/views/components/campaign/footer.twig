{# 
    Component: Campaign Footer
    Description: Minimal footer with necessary legal links.
#}
<footer class="campaign-footer-component theme-{{ theme|default('dark') }}">
    <div class="container">
        <div class="footer-grid">
            <div class="brand">
                <img src="{{ store.logo }}" alt="{{ store.name }}">
                <p>&copy; {{ "now"|date("Y") }} {{ store.name }}. All Rights Reserved.</p>
            </div>
            
            <div class="legal-links">
                <a href="/privacy">Privacy Policy</a>
                <a href="/terms">Terms of Service</a>
                <a href="/contact">Contact Us</a>
            </div>
            
            <div class="social-links">
                {% for social in store.social %}
                    <a href="{{ social.url }}"><i class="icon-{{ social.type }}"></i></a>
                {% endfor %}
            </div>
        </div>
    </div>
</footer>
