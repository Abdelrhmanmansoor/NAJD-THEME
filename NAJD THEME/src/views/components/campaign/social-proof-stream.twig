{# 
    Component: Social Proof Stream
    Description: Infinite horizontal scroll of testimonials/logos.
#}
<section class="social-proof-stream theme-{{ theme|default('light') }}">
    <div class="stream-track">
        {# Repeated twice for infinite loop illusion #}
        {% for i in 1..2 %}
            <div class="stream-content">
                {% for proof in items %}
                    <div class="proof-card">
                        <div class="user-info">
                            <img src="{{ proof.avatar }}" alt="{{ proof.name }}" loading="lazy">
                            <span class="user-name">{{ proof.name }}</span>
                        </div>
                        <p class="user-comment">"{{ proof.comment }}"</p>
                        <div class="user-stars">★★★★★</div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</section>
<style>
    .stream-track { display: flex; animation: scroll-left 30s linear infinite; }
    @keyframes scroll-left { 0% { transform: translateX(0); } 100% { transform: translateX(-50%); } }
</style>
