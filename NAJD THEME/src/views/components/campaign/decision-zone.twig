{# 
    Component: Decision Zone
    Description: The area where the user makes the final purchase decision.
#}
<section class="decision-zone-component" data-product-id="{{ product.id }}">
    <div class="container">
        <div class="decision-grid">
            <div class="product-gallery">
                <img src="{{ product.featured_image }}" alt="{{ product.name }}">
            </div>
            
            <div class="product-details">
                <h2 class="product-title">{{ product.name }}</h2>
                <div class="price-box">
                    <span class="current-price">{{ product.price }}</span>
                    {% if product.sale_price %}
                        <span class="old-price">{{ product.regular_price }}</span>
                    {% endif %}
                </div>
                
                {# Purchase Reinforcement #}
                <div class="reinforcement-badges">
                    <span><i class="icon-secure"></i> Secure Checkout</span>
                    <span><i class="icon-shipping"></i> Free Shipping</span>
                </div>

                <div class="action-box">
                    {% component 'campaign.cta' with { text: 'Add to Cart', type: 'primary' } %}
                </div>
            </div>
        </div>
    </div>
</section>
