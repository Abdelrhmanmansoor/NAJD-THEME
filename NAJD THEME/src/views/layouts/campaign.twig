{# Campaign Mode Layout #}
<div id="campaign-app" class="campaign-layout" data-campaign-id="{{ theme.settings.campaign_id }}">
    
    {# Campaign Header (Simplified or Hidden) #}
    {% if theme.settings.show_campaign_header %}
        <header class="campaign-header">
            <div class="container">
                <div class="brand-logo">
                    <img src="{{ store.logo }}" alt="{{ store.name }}">
                </div>
            </div>
        </header>
    {% endif %}

    <main class="campaign-content">
        {# Dynamic Section Rendering for Campaigns #}
        {% for section in theme.settings.campaign_sections %}
            {% include 'components/campaign/' ~ section.type ~ '.twig' with section.data %}
        {% endfor %}
        
        {# Fallback content if no campaign sections defined #}
        {% if not theme.settings.campaign_sections %}
             {{ content_for_layout | raw }}
        {% endif %}
    </main>

    <footer class="campaign-footer">
        <div class="container">
            <p>&copy; {{ "now"|date("Y") }} {{ store.name }}</p>
        </div>
    </footer>
    
    {# Sticky CTA Injection #}
    {% if theme.settings.sticky_cta_enabled %}
        {% include 'components/campaign/sticky-cta.twig' %}
    {% endif %}
</div>
