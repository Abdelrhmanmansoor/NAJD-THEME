{# Funnel Mode Layout #}
<div id="funnel-app" class="funnel-layout focus-lock-strict">
    
    {# Minimal Header: Logo Only #}
    <header class="funnel-header">
        <div class="container text-center">
            <img src="{{ store.logo }}" alt="{{ store.name }}" style="max-height: 40px;">
        </div>
    </header>

    <main class="funnel-content">
        {# Linear flow only - No random navigation #}
        <div class="funnel-steps">
             {% include 'components/campaign/progress-bar.twig' with { position: 'top', label: 'Checkout Progress' } %}
             
             {{ content_for_layout | raw }}
        </div>
    </main>

    <footer class="funnel-footer text-center">
        <div class="container">
            <small>&copy; {{ store.name }} - Secure Checkout</small>
            <div class="secure-badges">
                <i class="icon-ssl"></i>
            </div>
        </div>
    </footer>
</div>
<style>
    /* Strict Funnel CSS overrides */
    body.mode-funnel { overflow-x: hidden; }
    .funnel-layout a:not(.cta-button) { pointer-events: none; text-decoration: none; color: inherit; }
</style>
